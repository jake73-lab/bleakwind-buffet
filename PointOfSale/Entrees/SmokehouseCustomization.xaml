<UserControl x:Class="PointOfSale.Entrees.SmokehouseCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Customize Smokehouse Skeleton</Label>
        <CheckBox IsChecked="{Binding Path=SausageLink}" Grid.Row="1">Sausage Link</CheckBox>
        <CheckBox IsChecked="{Binding Path=Egg}" Grid.Row="2">Egg</CheckBox>
        <CheckBox IsChecked="{Binding Path=HashBrowns}" Grid.Row="3">Hash Browns</CheckBox>
        <CheckBox IsChecked="{Binding Path=Pancake}" Grid.Row="4">Pancake</CheckBox>
        <Button Click="Complete" Name="completeSmokehouse" Grid.Row="5">Done</Button>
    </Grid>
</UserControl>
