<UserControl x:Class="PointOfSale.Entrees.PhillyCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Customize Philly Poacher</Label>
        <CheckBox IsChecked="{Binding Path=Sirloin}" Grid.Row="1">Sirloin</CheckBox>
        <CheckBox IsChecked="{Binding Path=Onion}" Grid.Row="2">Onion</CheckBox>
        <CheckBox IsChecked="{Binding Path=Roll}" Grid.Row="3">Roll</CheckBox>
        <Button Click="Complete" Name="completePhilly" Grid.Row="5">Done</Button>
    </Grid>
</UserControl>
