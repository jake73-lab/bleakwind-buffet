<UserControl x:Class="PointOfSale.Entrees.BriarheartBurgerCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Customize Briarheart Burger</Label>
        <CheckBox IsChecked="{Binding Path=Bun}" Grid.Row="1">Bun</CheckBox>
        <CheckBox IsChecked="{Binding Path=Ketchup}" Grid.Row="2">Ketchup</CheckBox>
        <CheckBox IsChecked="{Binding Path=Mustard}" Grid.Row="3">Mustard</CheckBox>
        <CheckBox IsChecked="{Binding Path=Pickle}" Grid.Row="4">Pickle</CheckBox>
        <CheckBox IsChecked="{Binding Path=Cheese}" Grid.Row="5">Cheese</CheckBox>
        <Button Click="Complete" Name="completeBurger" Grid.Row="6">Done</Button>
    </Grid>
</UserControl>
