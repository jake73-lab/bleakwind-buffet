<UserControl x:Class="PointOfSale.Entrees.OmletteCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Customize Garden Orc Omlette</Label>
        <CheckBox IsChecked="True" Grid.Row="1">Broccoli</CheckBox>
        <CheckBox IsChecked="True" Grid.Row="2">Mushrooms</CheckBox>
        <CheckBox IsChecked="True" Grid.Row="3">Tomato</CheckBox>
        <CheckBox IsChecked="True" Grid.Row="4">Cheddar</CheckBox>
        <Button Click="Complete" Name="completeOmlette" Grid.Row="5">Done</Button>
    </Grid>
</UserControl>
