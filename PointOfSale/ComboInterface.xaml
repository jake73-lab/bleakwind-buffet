<UserControl x:Class="PointOfSale.ComboInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Name="entreeChoices" Grid.Row="0" SelectionChanged="entreeChoices_SelectionChanged"></ComboBox>
        <Border Name="entreeContainer" Grid.Row="1">
        </Border>
        <ComboBox Name="sideChoices" Grid.Row="2" SelectionChanged="sideChoices_SelectionChanged"></ComboBox>
        <Border Name="sideContainer" Grid.Row="3">
        </Border>
        <ComboBox Name="drinkChoices" Grid.Row="4" SelectionChanged="drinkChoices_SelectionChanged"></ComboBox>
        <Border Name="drinkContainer" Grid.Row="5">
        </Border>
    </Grid>
</UserControl>
